-					All Rights Reserved.
-
- DESCRIPTION
-	Show Page Details

- HISTORY 
	5/16/00 - Convert to standard UI layout - Jeff Sokolov

-->

<ASSET.GETASSETTYPE NAME="Variables.assetname" OUTNAME="at"/>
<ASSETTYPE.GET NAME="at" FIELD="description" OUTPUT="at:description"/>

    <table border="0" cellpadding="0" cellspacing="0">
    
    <!-- Page page title with asset name -->
	<tr>
		<td><span class="title-text"><STRING.STREAM VALUE="Variables.at:description"/>: </span><span class="title-value-text"><STRING.STREAM VARIABLE="ContentDetails:name"/></span></td>
	</tr>

	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/TitleBar">
		<argument NAME="SpaceBelow" VALUE="No"/>
	</callelement>

	<!-- Action bar -->
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/ActionBar">
		<argument NAME="Screen" VALUE="Inspect"/>
	</callelement>

	<!-- Page attribute inspection form -->
	<tr>
		<td>
			<table border="0" cellpadding="0" cellspacing="0">

				<!-- The beginning of Group 1 -->
				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacerBar">
					<argument NAME="SpaceAbove" VALUE="No"/>
				</callelement>
				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Name"/>:</td>
					<td><img height="1" width="5" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/></td>
					<td><STRING.STREAM VARIABLE="ContentDetails:name"/></td>
				</tr>

				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Description"/>:</td>
					<td><img height="1" width="5" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/></td>
					<td><STRING.STREAM VARIABLE="ContentDetails:description"/></td>
				</tr>

			<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
			<tr>
				<td class="form-label-text"><XLAT.STREAM KEY="dvin/UI/Subtype"/>:</td>
				<td></td>
				<td>
					<if COND="Variables.ContentDetails:subtype=Variables.empty">
					<then>
						<XLAT.STREAM KEY="dvin/UI/Util/Standardnosubtype"/>
					</then>
					<else>
						<STRING.STREAM  VARIABLE="ContentDetails:subtype"/>
					</else>
					</if>
				</td>
			</tr>

				<CALLELEMENT NAME="OpenMarket/Xcelerate/Actions/Util/ShowTemplateDetailsIfAny">
					<!--also depends on Variables.AssetType-->
					<ARGUMENT NAME="template" VALUE="Variables.ContentDetails:template"/>
				</CALLELEMENT>

				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
				<tr>
					<callelement NAME="OpenMarket/Xcelerate/Actions/Util/ShowStatusCode"/>
				</tr>

				<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
				<tr>
					<td class="form-label-text">
						<XLAT.STREAM KEY="fatwire/Alloy/UI/StartDate"/>: 
					</td>
					<td></td>
					<td>
                        <DATEFORMAT.GETDATETIME NAME="_FormatDate_" VALUE="Variables.ContentDetails:startdate" VALUETYPE="jdbcdate"  VARNAME="ContentDetails:startdate"/>
                        <STRING.STREAM VARIABLE="ContentDetails:startdate" />
					</td>
				</tr>
				<tr>
					<td class="form-label-text">
						<XLAT.STREAM KEY="fatwire/Alloy/UI/EndDate"/>: 
					</td>
					<td></td>
					<td>
                        <DATEFORMAT.GETDATETIME NAME="_FormatDate_" VALUE="Variables.ContentDetails:enddate" VALUETYPE="jdbcdate"  VARNAME="ContentDetails:enddate"/>
                        <STRING.STREAM VARIABLE="ContentDetails:enddate" />
					</td>					
				</tr>

			<callelement NAME="OpenMarket/Xcelerate/AssetType/Dimension/ShowDimensionDetails"/>

				<!-- The beginning of Group 2 -->
				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacerBar"/>
				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/AT/Common/ID"/>:</td>
					<td></td>
					<td><STRING.STREAM VALUE="Variables.ContentDetails:id"/></td>
				</tr>
			
				<setvar NAME="assettype" VALUE="Page"/>
				<selectto LIST="Category" FROM="Category" WHERE="assettype"/>
				<IF COND="Category.#numRows!=0">
				<THEN>
					<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
					<tr>
						<td class="form-label-text"><XLAT.STREAM KEY="dvin/UI/Admin/Category"/>:</td>
						<setvar NAME="category" VALUE="Variables.ContentDetails:category"/>
						<selectto LIST="CategoryDescription" FROM="Category" WHAT="description" WHERE="category,assettype"/>
						<td></td>
						<td><STRING.STREAM LIST="CategoryDescription" COLUMN="description"/>
						</td>
					</tr>
				</THEN>
				</IF>

				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
 				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Filename"/>: </td>
					<td></td>
					<td><STRING.STREAM VALUE="Variables.ContentDetails:filename"/></td>
				</tr>

				
				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
 				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Path"/>: </td>
					<td></td>
					<td><STRING.STREAM VALUE="Variables.ContentDetails:path"/></td>
				</tr>
				

				<!-- The beginning of Group 3 -->
				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacerBar"/>
				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Related"/>:</td>
					<td></td>
					<td>
						<CALLELEMENT NAME="OpenMarket/Xcelerate/Actions/AssetMgt/ShowAssetChildren">
							<ARGUMENT NAME="assetname" VALUE="theCurrentAsset"/>
						</CALLELEMENT></td>
				</tr>

				<CALLELEMENT NAME="OpenMarket/Xcelerate/Actions/AssetMgt/ReferencesAndSharing"/>

				<!-- The beginning of Group 4 -->
				<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacerBar"/>
				<tr>
					<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Modified"/>:</td>
					<td></td>
					<td>
					<DATEFORMAT.GETDATETIME NAME="_FormatDate_" VALUE="Variables.ContentDetails:updateddate" VALUETYPE="jdbcdate"  VARNAME="ContentDetails:updateddate"/>
					<XLAT.STREAM KEY="dvin/UI/ContentDetailsupdateddatebyupdatedby"/></td>
				</tr>				
			</table>
			<!-- End of body -->
		</td>
	</tr>

 	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/FooterBar"/>
	<tr>
		<td><img height="10" width="1" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/></td>
	</tr>
 </table>

</FTCS>
