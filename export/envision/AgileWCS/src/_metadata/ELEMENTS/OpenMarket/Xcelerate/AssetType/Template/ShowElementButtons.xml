<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Xcelerate/AssetType/Template/ShowElementButtons
-
- INPUT
-	currentElement - integer indication which element variant is in use
- OUTPUT
-
-->
<tr>
	<td class="form-label-text"> <XLAT.STREAM KEY="dvin/Common/AT/CreateTemplateElementQ"/> </td>
	<td></td>
	<td>
		<a href="javascript:void(0);" onmouseover="window.status='';return true;" onmouseout="window.status='';return true" onClick="setXmlString('Template:element:Variables.currentElement:url','Template:element:Variables.currentElement:theme')" REPLACEALL="Variables.currentElement"><img src="Variables.cs_imagedir/graphics/common/button/content/images/xml.gif" border="0" REPLACEALL="Variables.cs_imagedir"/></a>
		<a href="javascript:void(0);" onmouseover="window.status='';return true;" onmouseout="window.status='';return true" onClick="setJspString('Template:element:Variables.currentElement:url','Template:element:Variables.currentElement:theme')" REPLACEALL="Variables.currentElement"><img src="Variables.cs_imagedir/graphics/common/button/content/images/jsp.gif" hspace="12" border="0" REPLACEALL="Variables.cs_imagedir"/></a>
		<a href="javascript:void(0);" onmouseover="window.status='';return true;" onmouseout="window.status='';return true" onClick="setHtmlString('Template:element:Variables.currentElement:url','Template:element:Variables.currentElement:theme')" REPLACEALL="Variables.currentElement"><img src="Variables.cs_imagedir/graphics/common/button/content/images/html.gif" hspace="0" border="0" REPLACEALL="Variables.cs_imagedir"/></a>
	</td>
</tr>
<setvar NAME="varname" VALUE="ContentDetails:element:Variables.currentElement:theme"/> 
<setvar NAME="value" VALUE="Variables.Variables.varname"/>
<CALCULATOR.GO VALUE="Variables.ContentDetails:element:Total 1 GT" VARNAME="hasStyles"/>
<IF COND="Variables.hasStyles=1">
<THEN>
<tr>
	<td class="form-label-text">
		<XLAT.STREAM KEY="dvin/Common/Variant"/>:
	</td>
	<td></td>
	<td>
		<INPUT TYPE="text" SIZE="20" MAXLENGTH="32" NAME="Template:element:Variables.currentElement:theme" VALUE="Variables.value" REPLACEALL="Variables.value,Variables.currentElement"/>
	</td>
</tr>
</THEN>
<ELSE>
	<INPUT TYPE="hidden" NAME="Template:element:Variables.currentElement:theme" VALUE="Variables.value" REPLACEALL="Variables.value,Variables.currentElement"/>
</ELSE>
</IF>
</FTCS> 
