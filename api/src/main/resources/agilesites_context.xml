<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="demo,wcs" />

    <bean name="env" class="wcs.java.Env" lazy-init="true">
    </bean>

    <bean name="sitePlan" class="wcs.java.SitePlan" lazy-init="true">
        <constructor-arg index="0" ref="env"/>
    </bean>

    <bean name="router" class="demo.Router" lazy-init="true">
        <constructor-arg index="0" ref="env"/>
        <constructor-arg index="1" value="demo"/>
    </bean>

</beans>